# Variables de entorno para Cinema API
# Sistema híbrido: Administradores + Clientes

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_PASSWORD=postgres
PGADMIN_EMAIL=admin@cinema.com
PGADMIN_PASSWORD=admin123

# === CONFIGURACIÓN DE RABBITMQ ===
RABBITMQ_USER=cinema
RABBITMQ_PASS=cinema123

# === CONFIGURACIÓN JWT (CAMBIAR EN PRODUCCIÓN) ===
JWT_SECRET=ClaveUltraSeguraYSecretaParaJWT2025CinemaAPI!
JWT_REFRESH_SECRET=OtroSecretoSuperLargoYSeguroParaRefresh2025!
JWT_ISSUER=api-cinema-auth
JWT_EXPIRATION_MINUTES=180
JWT_REFRESH_EXPIRATION_DAYS=7

# === CONFIGURACIÓN DE APLICACIÓN ===
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development

# === CONFIGURACIÓN DEL FRONTEND ===
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_AUTH_API_URL=http://localhost:5001
ENABLE_CLIENT_REGISTRATION=true
CINEMA_NAME=Cinema API

# === CONFIGURACIÓN DE SEGURIDAD ===
ENABLE_FIRST_ADMIN_SETUP=true

# === URLs PÚBLICAS (para el frontend) ===
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3000/admin
